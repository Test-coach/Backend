{
  "name": "expresshub",
  "version": "1.0.0",
  "description": "A modern, secure, and scalable web application built with Express, featuring authentication, WebSocket support, PostgreSQL database, and Redis caching",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "node --watch src/app.js",
    "test:db": "psql -U dev -d myappdb -c 'SELECT NOW()'",
    "test:redis": "redis-cli ping",
    "seed": "node src/db/seed.js",
    "migrate": "node src/db/prisma/migrations/migrate.js",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "migrate:status": "prisma migrate status",
    "db:seed": "prisma db seed",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "test": "jest",
    "test:prisma": "node src/db/prisma/tests/prisma.test.js",
    
    "docker:up": "docker-compose -f docker/dev/docker-compose.yml up",
    "docker:down": "docker-compose -f docker/dev/docker-compose.yml down",
    "docker:build": "docker-compose -f docker/dev/docker-compose.yml up --build",
    "docker:logs": "docker-compose -f docker/dev/docker-compose.yml logs -f",
    "docker:restart": "docker-compose -f docker/dev/docker-compose.yml restart",
    "docker:ps": "docker-compose -f docker/dev/docker-compose.yml ps",
    "docker:exec": "docker-compose -f docker/dev/docker-compose.yml exec app",
    "docker:shell": "docker-compose -f docker/dev/docker-compose.yml exec app sh",
    "docker:prisma": "docker-compose -f docker/dev/docker-compose.yml exec app npx prisma",
    "docker:test": "docker-compose -f docker/dev/docker-compose.yml exec app npm test"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.0",
    "qrcode": "^1.5.4",
    "redis": "^5.1.1",
    "speakeasy": "^2.0.0",
    "ws": "^8.16.0",
    "zod": "^3.25.45"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.9.0",
    "supertest": "^7.1.1",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "node src/db/prisma/seed.js"
  }
}
